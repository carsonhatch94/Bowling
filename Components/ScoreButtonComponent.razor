@code {
    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public EventCallback<int> OnClick { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public string CssClass { get; set; }
}

<button class="@CssClass" @onclick="() => OnClick.InvokeAsync(Value)" disabled="@Disabled">@Value</button>
